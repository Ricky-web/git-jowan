<div class="dailyRanks__article flexContainer sLine">
    <div class="dailyRanks__article__leftItem">
        <div class="dailyRanks__article__leftItem__rankNum"><span><%= i %></span></div>
        <% if post.user.image.attached? %>
            <%= image_tag post.user.image, class: "dailyRanks__article__leftItem__authorAvatar", alt: "Author:#{post.user.nickname}", onmousedown: "return false;", oncontextmenu: "return false;", onselectstart: "return false;" %>
        <% else %>
            <%= image_tag "default.png", class: "dailyRanks__article__leftItem__authorAvatar", alt: "Author:#{post.user.nickname}" %>
        <% end %>
        <div class="dailyRanks__article__leftItem__currencyPair">
            <%= image_tag "ccy_img/#{post.currency_pair[0, 3]}.png", class: "dailyRanks__article__leftItem__currencyPair__currency", alt: "#{post.currency_pair[0, 3]}", onmousedown: "return false;", oncontextmenu: "return false;", onselectstart: "return false" %>
            <%= image_tag "ccy_img/#{post.currency_pair[3, 6]}.png", class: "dailyRanks__article__leftItem__currencyPair__marginCurrency", alt: "#{post.currency_pair[3, 6]}", onmousedown: "return false;", oncontextmenu: "return false;", onselectstart: "return false;" %>
        </div>
        <div class="dailyRanks__article__leftItem__likeCount"><i class="fas fa-thumbs-up"></i>&nbsp;<%= post.likes.count %></div>
    </div>
    <div class="dailyRanks__article__rightItem">
        <h4 class="dailyRanks__article__rightItem__postTitle">
            <% if user_signed_in? && current_user.already_watched?(post) %>
                <%= link_to "#{post.title}", post_path(post), method: :get %>
            <% else %>
                <%= link_to "#{post.title}", post_views_path(post), method: :post %>
            <% end %>
        </h4>
        <time class="dailyRanks__article__rightItem__createdDT" datetime="<%= post.created_at.strftime("%FT%T%z") %>">
            <i class="fas fa-clock"></i>&nbsp;<%= post.created_at.strftime("%F %T %z") %>
        </time>
    </div>
</div>